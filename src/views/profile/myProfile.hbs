<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4">
                    <img src="/images/avatar/anonimus.png" alt="Fotom Perfil" class="ml-5" style="border-radius:50%;">
                    <div class="custom-file mt-3 ml-5 col-8" style="margin-left: 5%;">
                        <input type="file" class="custom-file-input ml-5" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01" placeholder="">
                        <label class="custom-file-label" for="inputGroupFile01">Imagem</label>
                    </div>
                </div>
                <div class="col-sm mt-4">
