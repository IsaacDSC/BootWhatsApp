<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="h2">Vizualização de Cardápios Cadastrados</div>
            <hr>
            <form action="/menu/views" method="post">
                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="class">Selecione a classe de alimento que deseja visualizar</label>
                        <select name="class" id="class" class="form-control">
                            <option value="">Selecione</option>
                            {{#each class}}
                            <option value="{{class}}">{{maiuscula class}}</option>
                            {{/each}}
                        </select>
                        <button class="btn btn-outline-success mt-2 col-12">Pesquisar</button>
                        <hr class="mt-4">
                    </div>
                </div>
            </form>
            <form action="/menu/delete" method="post">
                <div class="row col-12 mt-3">
                    {{#each data}}
                    <div class="form-group col-6">
                        <p><strong>Nome: </strong>{{name}}</p>
                        <p><strong>Descrição: </strong>{{desc}}</p>
                        <p><strong>Valor do Produto: </strong>{{dinheiro value}}</p>
                        <p><strong>Gasto para Produzir: </strong>{{dinheiro costProduce}}</p>
                        <hr>
                    </div>
                    {{/each}}
                </div>
            </form>
        </div>
    </div>
</div>