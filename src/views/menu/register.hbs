<div class="container">
    <div class="card">
        <div class="card-body">
            <h5>Cadastre seu Cardápio</h5>
            <hr>
            {{>_msg}}
            <form action="/menu/register" method="post">
                <div class="row col-12">
                    <div class="form-group col-12">
                        <select name="class" id="class" class="form-control">
                            <option value="promocoes">Selecione uma Classe</option>
                            {{#each class}}
                            <option value={{classMenu}}>{{classMenu}}</option>
                            {{/each}}                            
                        </select>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="">Produto</label>
                        <input type="text" name="name" maxlength="40" id="name" class="form-control">
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="">Descrição</label>
                        <textarea name="desc" id="desc" cols="30" rows="1" maxlength="110" style="resize: none;" class="form-control"></textarea>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-6">
                        <label for="">Gasto Material</label>
                        <input type="number" max="999" name="costProduce" id="costProduce" class="form-control">
                    </div>
                    <div class="form-group col-6">
                        <label for="">Valor Venda</label>
                        <input type="number" max="999" name="value" id="value" class="form-control">
                    </div>
                </div>
                <div class="row col-12 mt-2">
                    <div class="form-group col-12">
                        <button class="btn btn-outline-success col-12">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>