<div class="modal fade" tabindex="-1" id="MeuModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adione os dados do Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form action="/caixa" method="post">
                        <div class="form-group col-8">
                            <select name="telephone" id="telephone" class="form-control">
                                <option value="">Selecione o Cliente</option>
                                {{#each users}}
                                <option value="{{telephone}}">{{name}} - {{telephone}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-2">
                            <button class="btn btn-outline-dark">Pesquisar</button>
                        </div>
                    </form>
                </div>
                <hr>
                <form action="/caixa/registerUser" method="post">
                    <div class="row mt-3">
                        <input type="hidden" name="id" value="{{clients.id}}">
                        <div class="form-group col-6">
                            <label for="" class="ml-2">Nome do Cliente</label>
                            <input type="text" name="name" class="form-control ml-2" value="{{clients.name}}">
                        </div>
                        <div class="form-group col-6">
                            <label for="" class="ml-2">Numero Telefone do Cliente</label>
                            <input type="text" name="telephone" class="form-control ml-2" value="{{clients.telephone}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-5">
                            <label for="" class="neighborhood">Bairro</label>
                            <input type="text" name="" class="form-control " value="{{clients.neighborhood}}">
                        </div>
                        <div class="form-group col-7">
                            <label for="" class="adress">Endere√ßo</label>
                            <input type="text" name="" class="form-control " value="{{clients.address}}">
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
            </form>
        </div>
    </div>
</div>
